<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.votafore.earthporn.ActivityMain">

    <com.votafore.earthporn.customviews.AutofitRecyclerView
        android:id="@+id/image_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:columnWidth="@dimen/rv_column_width"
        android:background="#ccc"/>

    <Button
        android:id="@+id/get_top_images"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/get_new_images"/>

    <Button
        android:id="@+id/get_new_images"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="new"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/get_top_images"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>
